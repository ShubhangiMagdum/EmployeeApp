
@{
    ViewBag.Title = "DailyAttendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/css/design.css" rel="stylesheet" />

<div class="container mt-5" id="designContent">
    <div class="row">
        <h2>Daily Attendance</h2>
        <form id="AttentanceForm" action="AddOrEdit" controller="Attendance" method="post">
            <div class="form-group">
                <label>Employee Name </label>
            </div>
            <div class="form-group mt-2">
                <input type="hidden" class="form-control" id="EmployeeId" name="EmployeeId" value="@Session["UserId"]" />
                <input type="text" class="form-control" id="EmployeeName" name="EmployeeName" value="@Session["UserName"]" />
            </div>
            <div class="form-group">
                <label>Date </label>
            </div>
            <div class="form-group mt-2">
                <input type="datetime-local" id="Date" name="Date" class="form-control" readonly>
            
            </div>
            <div class="form-group">
                <label>Status</label>
            </div>
            <div class="form-group mt-2">
                <select id="status" class="form-select" name="status">
                    <!-- Attendance options will be populated dynamically -->
                </select>
            </div>
            <div class="form-group mt-2">
                <button type="submit" id="btnSubmit" class="btn btn-success">Submit</button>
            </div>
        </form>


    </div>
</div>

@section Scripts {
    <script src="~/Scripts/js/attendance.js"></script>
}
