
<style>
    label.error {
        color: red;
        font-size: 14px;
        font-weight: bold;
    }
    </style>
<div class="container">
    <div class="row">
        <form id="depForm">
            <div class="d-flex align-items-center">
                <label class="me-2"> Name</label>
                <input type="text" class="form-control" id="DepartmentName" name="DepartmentName" placeholder="Enter Department Name" />
            </div>
            <div class="form-group mt-2">
                <button type="submit" id="btnSubmit" class="btn btn-success" onclick="submitForm()"><i class="fa-solid fa-floppy-disk mx-2"></i>Submit</button>
            </div>
        </form>
    </div>
</div>


<script>
    $(document).ready(function () {
        //Validation 
        $("#depForm").validate({
            rules: {
                DepartmentName: {
                    required: true,
                    text: true,
                    min: 0
                }
            },
            messages: {
                DepartmentName: "Department Name is required."
            },
            submitHandler: function (form) {
                alert("Form submitted successfully!");
                form.submit();
            }
        });
    });

    </script>